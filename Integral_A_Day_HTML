<head>
  <title>Integral A Day</title>
  <script src="https://cdn.jsdelivr.net/pyodide/v0.23.4/full/pyodide.js"></script>
</head>
<body>
  <h1>Integral A Day</h1>
  <pre id="output">Running...</pre>

  <script type="text/javascript">
    async function main() {
      let pyodide = await loadPyodide();
      
      // You could also fetch from your GitHub raw URL
      const pythonCode = `
import sympy as sp
x = sp.Symbol('x')
result = sp.integrate(x**2 * sp.exp(-x**2), (x, -sp.oo, sp.oo))
print("Integral result:", result.evalf())
`;

      pyodide.runPythonAsync(pythonCode).then(() => {
        document.getElementById("output").textContent = pyodide.globals.get("result");
      }).catch((err) => {
        document.getElementById("output").textContent = err;
      });
    }
    main();
  </script>
</body>
</html>
